pico-8 cartridge // http://www.pico-8.com
version 38
__lua__
--loop
function _init()
 box1={
  sp=1,
  x=24,
  y=56,
  anim=0
 }
 box2={
  sp=17,
  x=56,
  y=56,
  anim=0
 }
 box3={
  sp=33,
  x=88,
  y=56,
  anim=0
 }
end

function _draw()
 cls(0)

 for x=0,15 do
  for y=0,15 do
   --vert
   line(x*8,0,x*8,15*8,6)
   --hor
   line(0,y*8,15*8,y*8,6)
  end
 end
 
 spr(box1.sp,box1.x,box1.y)
 spr(box2.sp,box2.x,box2.y)
 spr(box3.sp,box3.x,box3.y)
 
 rectfill(0,0,25,5,0)
 rectfill(0,5,95,11,0)
 print(time(),7)
 print('left-down-right buttons')
end

function _update60()
 _box1()
 _box2()
 _box3()
end
