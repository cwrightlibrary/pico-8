function _init()
 p={
  sp=1,
  flp=false,
  x=2,
  y=4,
  w=16,
  h=16,
  dx=0,
  dy=0,
  max_dx=1.5,
  max_dy=2,
  anim=0,
  running=false,
  sliding=false,
  landed=false,
  jumping=false,
  falling=false,
  acc=.25,
  boost=3.7
 }
 gravity=.2
 friction=.85

 palt(0,false)
 palt(2,true)

 rx1=0 rx2=0
 ry1=0 ry2=0
end

function _update60()
 p_update()
end

function _draw()
 cls(13)
 map(0,0)
 --rectfill(rx1,ry1,rx2,ry2,14)
 spr(p.sp,p.x,p.y,p.w/8,p.h/8,p.flp)
 print(p.x)
end
