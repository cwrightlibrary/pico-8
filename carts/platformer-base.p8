--game loop
function _init()
 p={
  sp=1,
  flp=false,
  x=20,
  y=20,
  w=8,
  h=8,
  dx=0,
  dy=0,
  max_dx=1,
  max_dy=2,
  anim=0,
  running=false,
  sliding=false,
  landed=false,
  jumping=false,
  falling=false,
  acc=.25,
  boost=3.7
 }
 gravity=.2
 friction=.85
end

function _update60()
 p_update()
 p_animate()
end

function _draw()
 cls(12)
 map(0,0)
 spr(p.sp,p.x,p.y,p.w/8,p.h/8,p.flp)
end
