function _init()
 p={}
 p.sp=1
 p.x=2
 p.y=14
 p.w=8
 p.h=8
 p.dx=0
 p.dy=0
 p.max_dx=2
 p.max_dy=3
 p.acc=.5
 p.boost=3

 gravity=.5
 friction=.85
end

function _update60()

end

function _draw()
 cls()
 map(0,0,0,0)
 spr(p.sp,p.x*8,p.y*8)
end

function p_update()
 if btn(0) then
  p.dx-=p.acc
 end
 if btn(1) then
  p.dx+=p.acc
 end
 if btn(4) then
  p.dy-=p.boost
 end
 if p.dy>0 then
  p.dy=limit_speed(p.dy,p.max_dy)
 end
 if p.dx<0 then
  p.dx=limit_speed(p.dx,p.max_dx)
 end
end

function limit_speed(num,maximum)
 return mid(-maximum,num,maximum)
end

